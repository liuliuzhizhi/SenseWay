  margin-left: 460rpx;
}


.bottom_navigate {
  position: fixed;      /* 固定位置 */
  bottom: 0;            /* 距离底部 0 */
  left: 0;
  width: 100%;          /* 占满整个宽度 */
  display: flex;
  justify-content: space-around; /* 子元素均分 */
  align-items: center;
  height: 100rpx;       /* 高度自定义 */
  background-color: rgb(252, 222, 158);
  border-top: 1rpx solid #eee; /* 顶部分隔线 */
}