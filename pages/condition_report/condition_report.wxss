/* pages/condition_report/condition_report.wxss */

.page { background:#f5f2e7; min-height:100vh; padding:16rpx 20rpx 40rpx; }

.radar-wrap {
  position: top;
  width: 100%;
  height: 510rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 5rpx;
}
.radar-canvas {
  width: 750rpx;
  height: 500rpx;
  background: transparent;
}
.label {
  position: absolute;
  font-size: 28rpx;
  color: #2f2f2f;
  font-family: "STZhongsong";
}
.legend {
  display: flex;
  align-items: center;
  gap: 14rpx;
  color: #1f5134;
  font-size: 26rpx;
  justify-content: center;
  font-family: "STZhongsong";
}
.legend-dot {
  width: 36rpx;
  height: 18rpx;
  background: #1f5134;
  border-radius: 4rpx;
}

/* 结果标题与徽章 */
.result-title {
  text-align: center;
  color: #333;
  font-size: 34rpx;
  font-weight: 600;
  font-family: "STZhongsong";
}
.badge {
  width: 210rpx;
  margin: 16rpx auto 20rpx;
  text-align: center;
  background: #efe9e3;
  color: #8a5a3a;
  font-size: 34rpx;
  padding: 14rpx 0;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.08) inset;
  font-family: "STZhongsong";
}

/* 白色说明卡片 */
.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 22rpx 22rpx;
  box-shadow: 0 6rpx 14rpx rgba(0,0,0,0.06);
  margin-bottom: 26rpx;
  margin-top: 20rpx;
  font-family: "STZhongsong";
}
.row { display: flex; margin: 10rpx 0; }
.key {
  width: 190rpx;
  color: #3a1a01;
  font-weight: 700;
  font-size: 30rpx;
}
.val {
  flex: 1;
  color: #333;
  line-height: 48rpx;
  font-size: 30rpx;
}

/* 指导意见 */
.guide-title {
  text-align: center;
  font-size: 34rpx;
  color: #333;
  font-weight: 700;
  margin-top: 18rpx;
  font-family: "STZhongsong";
}
.accordion {
  background: #b1adad;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 14rpx rgba(0,0,0,0.06);
  margin-top: 10rpx;
  font-family: "STZhongsong";
}
.item {
  height: 92rpx;
  padding: 0 22rpx;
  display: flex;
  align-items: center;
}
.title {
  font-size: 32rpx;
  color: #333;
  margin-left: 16rpx;
}
.arrow {
  width: 32rpx;
  display: inline-block;
  transition: transform .2s ease;
  color: #8a8a8a;
}
.arrow.right { transform: rotate(0deg); }
.arrow.down  { transform: rotate(90deg); }
.content {
  padding: 16rpx 22rpx 28rpx;
  color: #333;
  line-height: 48rpx;
  font-size: 30rpx;
}
.divider {
  height: 1rpx;
  background: #ececec;
  margin: 0 22rpx;
}

/* 雷达图配色 */
:root {
  --grid: #d6dfd8;
  --line: #1f5134;
  --fill: rgba(31,81,52,.15);
  --dot: #1f5134;
}