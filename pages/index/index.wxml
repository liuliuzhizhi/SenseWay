<!--index.wxml-->
<view class="container">
	<view class="input-wrap">
		<view>用户名：</view>
		<input value="{{username}}" bindinput="inputUsername" class="info-input" />
	</view>
	<view class="input-wrap">
		<view>密码：</view>
		<input value="{{password}}" bindinput="inputPassword" class="info-input" password="true" />
	</view>
	<!-- 按钮 -->
	<button bindtap="login" class="action">登录</button>
	<button bindtap="toRegister" class="register">注册</button>
</view>
