/* pages/userprofile/userprofile.wxss */
.page { background:#f5f2e7; min-height:100vh; padding:16rpx 20rpx 40rpx; }

.avatar-wrap { position:relative; width:200rpx; height:200rpx; 
               margin-right:28rpx; 
               margin-top: 34rpx;
               border-radius:50%; overflow:hidden; 
               font-family: "STZhongsong";}
.avatar { width:100%; height:100%; background:#eaeaea; }
.avatar-mask {
  position:absolute; left:0; top:0; right:0; bottom:0;
  display:flex; align-items:center; justify-content:center;
  opacity:0; transition:opacity .2s; color:#fff; font-size:24rpx; background:rgba(0,0,0,.35);
}
.avatar-wrap:active .avatar-mask, .avatar-wrap:hover .avatar-mask { opacity:1; }

.id-wrap .name { font-size:60rpx; color:#333; font-weight:400; 
                margin-left: 10rpx; margin-top: 50rpx ;margin-bottom: 20rpx; font-family: "STZhongsong";}
.id-wrap .mobile { margin-top:8rpx; color:#666; font-size:26rpx; margin-left: 10rpx;}

.row1 {
  display: flex;
  justify-content: flex-start; /* 靠左对齐 */
  margin-bottom: 12rpx;           /* 每行和下一行的间距 */
  font-family: "STZhongsong";
}

/* 基本信息、过敏和疾病史、健康和饮食偏好三个栏目的卡片*/
.section-card {
  background:#fff; 
  border-radius:24rpx; 
  padding:20rpx 24rpx; 
  margin-top: 34rpx;
  margin-bottom:80rpx;
  box-shadow:0 4rpx 12rpx rgba(0,0,0,0.04);
}
.section-header { display:flex; 
                  justify-content:flex-start; 
                  align-items:center; 
                  margin-bottom:19rpx; 
                  gap : 1rpx
                }   
.title { font-size:40rpx;  /* 字号 */
         font-weight:1000; 
         color:#05834e; 
        }
.edit-btn { background-color: rgb(218, 213, 213);
            color:#333;    /* 按钮里面字的颜色 */   
            height:60rpx;     /* 按钮的高度 */
            margin-left: 20rpx;    /* 按钮和左边标题的间距 */
            margin-top: 10rpx;
            margin-bottom: 5rpx;
            align-items: center;
          }

.row2 {
  display: flex;
  justify-content: space-between; /* 两端对齐 */
  margin-bottom: 12rpx;           /* 每行和下一行的间距 */
  font-family: "STZhongsong";
}

.item {
  flex: 1;                        /* 每个 item 平分空间 */
  display: flex;
  justify-content: flex-start;    /* label 和 value 从左开始 */
  margin-top: 8rpx;
  margin-bottom: 3rpx;
  font-family: "STZhongsong";
}

.item + .item {
  margin-left: 40rpx;             /* 让“性别”和“身高”之间有固定间距 */
}

.label {
  color: #666;
  margin-right: 8rpx;             /* label 和 value 之间的间距 */
}

.value {
  color: #333;
  font-weight: bold;
}

.divider {
  width: 660rpx;           /* 线宽 */
  background-color: rgb(211, 208, 208); /* 线颜色 */
  height: 2rpx;          
}

.row3 {
  display: flex;
  justify-content: flex-start; 
  margin-bottom: 12rpx;           /* 每行和下一行的间距 */
  margin-top: 12rpx;
  font-family: "STZhongsong";
}

.loading { text-align:center; color:#888; padding:20rpx 0; }

.row4 {       /* BMI那一行 */
  display: flex;
  justify-content: flex-start; 
  margin-bottom: 12rpx;           /* 每行和下一行的间距 */
  margin-top: 12rpx;
  margin-left: 355rpx;
  font-family: "STZhongsong";
}